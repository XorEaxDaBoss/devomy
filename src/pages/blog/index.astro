---
import AppLayout from "@layouts/AppLayout.astro";
import BlogCard from "@components/BlogCard.astro";
import Header from "@components/Header.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const title = "My Devotion";
const description =
  "This is where I share my daily devotions. They are updated every day, so you can come back to read my latest thoughts and reflections.";
---

<AppLayout title={title} description={description}>
  <Header title="My Devotion" />
  <p
    class="max-w-prose mb-10 font-normal dark:text-zinc-400 text-zinc-600 leading-relaxed"
  >
    {description}
  </p>
  <ul class="flex flex-col gap-8 sm:border-l sm:dark:border-zinc-800">
    {
      posts.map((post) => (
        <BlogCard
          title={post.data.title}
          pubDate={post.data.pubDate}
          description={post.data.description}
          url={`/blog/${post.slug}/`}
        />
      ))
    }
  </ul>
</AppLayout>